{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "target": "ESNext",
    "importHelpers": false,
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": false,
    "types": ["node", "@emotion/react/types/css-prop"],
    "paths": {}
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "lib",
    "dist",
    "build",
    "node_modules"
  ]
}
